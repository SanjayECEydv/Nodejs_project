<body>
    <div class="">
        <form action="/updatesearch">
            <h3>SEARCH STUDENT</h3>
            <hr>

            <label for="phn"><b>Phone No.</b></label>
            <input type="phone" style="width:300px;" placeholder="Type phone no to be seached" name="phone" id="phone">

            <button type="submit" class="registerbtn">SEARCH STUDENT</button>
            <a href="./" style="color:black">BACK TO HOME PAGE</a> <br> 

            {{#if umesg}}

             <h3>Data Updated </h3>

            {{/if}}



            {{#if mesg2}}
